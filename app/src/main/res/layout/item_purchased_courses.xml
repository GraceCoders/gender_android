<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="@dimen/_70sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/boarder_gray"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/company_dummy"
                    android:id="@+id/img_product" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.9"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:text="Ut enim ad minim veniam, quis df ssfgg aasass mini"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_14sdp" />
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:text=" x 20 (seats)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:gravity="end"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/colororange"
            android:text="$720"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>