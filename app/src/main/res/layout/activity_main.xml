<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".company_section.view.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_35sdp"
                    android:src="@drawable/dummy_dp"
                    android:id="@+id/setting_page"
                    android:layout_height="@dimen/_35sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <com.gender.gendercomfortable.controller.CustomViews.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:text="Hello,GraceCoders"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:textColor="@color/naturalGray"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/courses_purchased"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/batch"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                    <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                        android:layout_width="wrap_content"
                        android:text="2 Courses purchased"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colororange"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:src="@drawable/notification"
                    android:layout_gravity="center"
                    android:id="@+id/img_notification"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/cart"
                    android:layout_gravity="center"
                    android:id="@+id/img_cart"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:text="@string/available_courses"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/naturalGray"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_courses"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>