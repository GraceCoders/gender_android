<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".company_section.view.activity.Login_Activity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/img_back"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:elevation="0dp"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_10sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/company_dummy"
            android:id="@+id/img_product" />
        </androidx.cardview.widget.CardView>
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_5sdp"
            android:text="Company Name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_24sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/lightGray"
            android:layout_height="@dimen/_1sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_edit_profile"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/edit"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_payment"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/payment"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/payment_option"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_courses"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/purchased"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/purchased_courses"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_change_pwd"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/password"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/change_password"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_terms"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/terms"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Terms &amp; Conditions"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:id="@+id/ll_privacy"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/privacy"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Privacy Policy"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textColor="@color/naturalGray"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/ll_logout"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/boarder_blue"
        android:layout_height="wrap_content">
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="match_parent"
            android:text="@string/logout"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>