<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lesson 1"
        android:textColor="@color/naturalGray"
        android:textSize="@dimen/_14sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/boarder_gray"
        android:layout_height="wrap_content">
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:lines="2"
            android:layout_height="wrap_content"
            android:text="Ut enim ad minim veniam, quis nostrud exercitation"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/naturalGray"
            android:textSize="@dimen/_14sdp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:src="@drawable/video"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>