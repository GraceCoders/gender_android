<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".company_section.view.activity.Login_Activity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/img_back"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/img_back"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="match_parent">
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:text="@string/order"
            android:textSize="@dimen/_24sdp"
            android:gravity="center_vertical"
            android:textColor="@color/naturalGray"
            android:layout_height="wrap_content"/>
        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:text="@string/order_details"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:textColor="@color/naturalGray"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="@dimen/_70sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/company_dummy"
                        android:id="@+id/img_product" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.9"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:text="Ut enim ad minim veniam, quis df ssfgg aasass mini"
                    android:textColor="@color/naturalGray"
                    android:textSize="@dimen/_14sdp" />
                <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:text=" x 20 (seats)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:gravity="end"
                android:textSize="@dimen/_14sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/colororange"
                android:text="$720"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
            android:layout_width="wrap_content"
            android:text="@string/payment_method"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textColor="@color/naturalGray"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder_gray">

                <com.gender.gendercomfortable.controller.CustomViews.MyEditTextNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/name_on_card"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/boarder_gray">

                <com.gender.gendercomfortable.controller.CustomViews.MyEditTextNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/card_number"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boarder_gray">

                    <com.gender.gendercomfortable.controller.CustomViews.MyEditTextNormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="MM"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/boarder_gray">

                    <com.gender.gendercomfortable.controller.CustomViews.MyEditTextNormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="yyyy"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/boarder_gray">

                <com.gender.gendercomfortable.controller.CustomViews.MyEditTextNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/cvv"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                    android:layout_width="wrap_content"
                    android:text="@string/remember_me"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/naturalGray"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"

                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/boarder_blue">

                <com.gender.gendercomfortable.controller.CustomViews.MyTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/checkout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
